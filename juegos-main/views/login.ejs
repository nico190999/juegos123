    </header>

    <main class="login-container">
        <div class="login-form-box">
            <h2>Acceso Administrador</h2>
            <form id="loginForm" method="POST" action="/usuarios/login">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>

                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required>

                <button type="submit" class="button">INGRESAR</button><br>

                <button type="button" id="btn-acceso-rapido" class="button-tester" >Acceso rápido (TESTER)</button>
            </form>
            <% if (error) { %>
                <p style="color: red; text-align: center;"><%= error %></p>
            <% } %>
        </div>
    </main>

    <footer>
        <a href="/frontend/views/cliente/bienvenida.html" class="button">Volver al inicio</a>
    </footer>

    <script>
        document.getElementById('btn-acceso-rapido').addEventListener('click', () => {
        const testEmail = 'admin@gamestore.com'; 
        const testPassword = '1234'; 

        document.getElementById('email').value = testEmail;
        document.getElementById('password').value = testPassword;
        });
    </script>

</body>
</html>

